<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>com.devis.servlets.PageAccueil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/</url-pattern> <!-- Utiliser une ServletFilter pour les query strings -->
    </servlet-mapping>

    <servlet>
        <servlet-name>PageDevis</servlet-name>
        <servlet-class>com.devis.servlets.PageDevis</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageDevis</servlet-name>
        <url-pattern>/devis</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/jsp/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

    <listener>
        <listener-class>com.devis.config.InitialisationDaoFactory</listener-class>
    </listener>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>

    <!-- TODO : add Header & Footer -->

</web-app>